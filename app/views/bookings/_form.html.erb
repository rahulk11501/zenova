<%= form_with(model: booking, class: "space-y-6") do |form| %>
  <% if booking.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-lg">
      <h2 class="font-semibold text-red-700 mb-2">
        <%= pluralize(booking.errors.count, "error") %> prevented this booking from being saved:
      </h2>
      <ul class="list-disc list-inside text-red-600 text-sm">
        <% booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :event_id, "Event", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :event_id, Event.all, :id, :title,
        { prompt: "Select an event" },
        class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :tickets_count, "Number of Tickets", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :tickets_count, min: 1,
        class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, ["pending", "confirmed", "canceled"],
        { prompt: "Select status" },
        class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div class="flex items-center gap-4">
    <%= form.submit class: "px-6 py-3 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700" %>
    <%= link_to "Cancel", bookings_path, class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300" %>
  </div>
<% end %>
