<div class="max-w-4xl mx-auto p-6 bg-white rounded-xl shadow">
  <div class="mb-6">
    <h1 class="text-4xl font-bold mb-2"><%= @event.title %></h1>
    <p class="text-gray-500"><%= @event.location %> â€¢ <%= @event.start_time.strftime("%b %d, %Y %I:%M %p") %> - <%= @event.end_time.strftime("%I:%M %p") %></p>
  </div>

  <p class="mb-6 text-gray-700"><%= @event.description %></p>

  <div class="flex justify-between items-center mb-6">
    <span class="text-lg font-semibold">Capacity: <%= @event.capacity %></span>
    <span class="text-lg font-semibold">Price: <%= number_to_currency(@event.price) %></span>
  </div>

  <div class="flex gap-4">
    <%= link_to "Edit", edit_event_path(@event), class: "px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700" %>
    <%= link_to "Back", events_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300" %>
    <%= button_to "Delete", @event, method: :delete, data: { confirm: "Are you sure?" },
        class: "px-4 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700" %>
  </div>
</div>
