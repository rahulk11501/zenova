<%= render "shared/auth_layout" do %>
  <h2 class="text-3xl font-bold text-gray-900 text-center">Sign in to Zenova</h2>

  <%= form_with scope: :user, url: session_path(:user), class: "space-y-6" do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-4 py-2 rounded-lg border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full px-4 py-2 rounded-lg border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Sign in",
            class: "w-full py-3 px-4 bg-indigo-600 text-white font-semibold rounded-lg shadow hover:bg-indigo-700 transition-colors" %>
    </div>
  <% end %>

  <div class="text-center text-sm space-x-4">
    <%= link_to "Sign up", new_registration_path(:user), class: "text-indigo-600 hover:underline" %>
    <%= link_to "Forgot password?", new_password_path(:user), class: "text-indigo-600 hover:underline" %>
  </div>
<% end %>
